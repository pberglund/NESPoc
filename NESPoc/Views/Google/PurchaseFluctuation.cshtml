@{
    ViewBag.Title = "Purchase Fluctuation";
}

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="~/Scripts/GoogleHelpers.js"></script>
<script type="text/javascript">

    var barObj = null;
    var lineObj = null;
    var lineDataVals = [];
    
    // Load the Visualization API and the corechart package.
    google.charts.load('current', { 'packages': ['corechart'] });

    // Set a callback to run when the Google Visualization API is loaded.
    google.charts.setOnLoadCallback(drawChart);

    // Set chart options
    var lineOptions = {
        'title': 'Fluctuations over a 12-month period',
        width: '100%',
        height: '100%',
        legend: { position: 'top' },
        hAxis: {
            title: 'Month',
            showTextEvery: 1,
            ticks: [{
                v: 0,
                f: 'Jan'
            }, {
                v: 1,
                f: 'Feb'
            }, {
                v: 2,
                f: 'Mar'
            }, {
                v: 3,
                f: 'Apr'
            }, {
                v: 4,
                f: 'May'
            }, {
                v: 5,
                f: 'Jun'
            }, {
                v: 6,
                f: 'Jul'
            }, {
                v: 7,
                f: 'Aug'
            }, {
                v: 8,
                f: 'Sep'
            }, {
                v: 9,
                f: 'Oct'
            }, {
                v: 10,
                f: 'Nov'
            }, {
                v: 11,
                f: 'Dec'
            }]
        },
        //trendlines: {
        //    0: {
        //        color: 'black',
        //    },
        //},
        trendlines: {
            0: {
                type: 'linear',
                color: 'black',
                lineWidth: 3,
                opacity: 0.3,
                showR2: false,
            }
        }
    };

    // Set chart options
    var defaultBarOptions = {
        isStacked: true,
        orientation: "horizontal",
    }
    var barOptions;

    // Callback that creates and populates a data table,
    // instantiates the pie chart, passes in the data and
    // draws it.
    function drawChart() {
        var callBack = function (d) {

            var massagedData = massageMonthData(d);

            var data = google.visualization.arrayToDataTable(massagedData);
            lineObj = {
                data: data,
                options: lineOptions,
            }

            lineObj = configureChartWithTrendLines(lineObj, 'line_chart_div', 'LineChart', 'updateLineChart', 'toggleLineTrendLines', function (chart) { randomizeData(chart, 2, true, function (e) { return massageMonthData(e); }); });

            barOptions = merge_options(defaultBarOptions, lineOptions);

            barObj = {
                data: data,
                options: barOptions,
            }

            barObj = configureChartWithTrendLines(barObj, 'bar_chart_div', 'BarChart', 'updateBarChart', 'toggleBarTrendLines', function (chart) { randomizeData(chart, 2, true, function (e) { return massageMonthData(e); }); });
        };

        InitializePage(callBack, 2, false);

    }

    function getmon(dataTable, rowNum) {
        var rd = dataTable.getValue(rowNum, 0);
        var rm = rd.getMonth();
        return {
            v: rm
        };
    }

</script>

<div class="row">
    <div class="col-md-12">
        <h1>Google Charts - Purchase Fluctuation</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h3>Line Chart</h3>
        <div class="chart_wrap">
            <div id="line_chart_div" class="chart"></div>
        </div>
        <a class="btn" id="updateLineChart">Update</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h3>Bar Chart</h3>
        <div class="chart_wrap">
            <div id="bar_chart_div" class="chart"></div>
        </div>
        <a class="btn" id="updateBarChart">Update</a>
    </div>
</div>