@{
    ViewBag.Title = "Index";
}


<script src="~/Scripts/GoogleHelpers.js"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">

    // Load the Visualization API and the corechart package.
    google.charts.load('current', { 'packages': ['corechart'] });

    // Set a callback to run when the Google Visualization API is loaded.
    google.charts.setOnLoadCallback(drawChart);


    var barChart;
    var lineChart;
    var pieChart;
    var doughnutChart;
    // Callback that creates and populates a data table,
    // instantiates the pie chart, passes in the data and
    // draws it.
    function drawChart() {

        // Create the data table.
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Topping');
        data.addColumn('number', 'Slices');
        data.addRows([
          ['Mushrooms', 3],
          ['Onions', 1],
          ['Olives', 1],
          ['Zucchini', 1],
          ['Pepperoni', 2]
        ]);

        // Set chart options
        var options = {
            'title': 'How Much Pizza I Ate Last Night',
            width: '100%',
            height: '100%',
        };     

        configureChart(barChart, 'bar_chart_div', 'BarChart', data, options);
        configureChart(barChart, 'line_chart_div', 'LineChart', data, options);
        configureChart(barChart, 'pie_chart_div', 'PieChart', data, options);
        options.pieHole = 0.4;
        configureChart(barChart, 'doughnut_chart_div', 'PieChart', data, options);
    }
</script>

<div class="row">
    <div class="col-md-12">
        <h1>Google Charts - Chart Demo</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="chart_wrap">
            <div id="line_chart_div" class="chart"></div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="chart_wrap">
            <div id="bar_chart_div" class="chart"></div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="chart_wrap">
            <div id="pie_chart_div" class="chart"></div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="chart_wrap">
            <div id="doughnut_chart_div" class="chart"></div>
        </div>
    </div>
</div>