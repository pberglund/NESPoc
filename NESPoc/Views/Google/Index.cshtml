@{
    ViewBag.Title = "Index";
}


<script src="~/Scripts/GoogleHelpers.js"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">

    // Load the Visualization API and the corechart package.
    google.charts.load('current', { 'packages': ['corechart'] });

    // Set a callback to run when the Google Visualization API is loaded.
    google.charts.setOnLoadCallback(drawChart);


    var barObj;
    var lineObj;
    var pieObj;
    var doughnutObj;
    var comboObj;
    var areaObj;
    // Callback that creates and populates a data table,
    // instantiates the pie chart, passes in the data and
    // draws it.
    function drawChart() {

        // Create the data table.
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Topping');
        data.addColumn('number', 'Slices');
        data.addColumn('number', 'Times');
        data.addRows([
          ['Mushrooms', 3, 1],
          ['Onions', 1, 4],
          ['Olives', 1, 3],
          ['Zucchini', 1, 2],
          ['Pepperoni', 2, 5]
        ]);

        // Set chart options
        var options = {
            'title': 'How Much Pizza I Ate Last Night',
            width: '100%',
            height: '100%',
            legend: { position: 'top' },
        };     

        lineObj = {
            data: data,
            options: options,
        }

        configureChart(lineObj, 'bar_chart_div', 'BarChart');

        barObj = {
            data: data,
            options: options,
        }
        configureChart(barObj, 'line_chart_div', 'LineChart');

        pieObj = {
            data: data,
            options: options,
        }
        configureChart(pieObj, 'pie_chart_div', 'PieChart');

        options.pieHole = 0.4;
        doughnutObj = {
            data: data,
            options: options,
        }
        configureChart(doughnutObj, 'doughnut_chart_div', 'PieChart');
        areaObj = {
            data: data,
            options: options,
        }
        configureChart(areaObj, 'area_chart_div', 'AreaChart');
        
        options.seriesType = 'bars';
        options.series = {
            1: { type: 'line' },
        }
        
        comboObj = {
            data: data,
            options: options,
        }
        configureChart(comboObj, 'combo_chart_div', 'ComboChart');
    }
</script>

<div class="row">
    <div class="col-md-12">
        <h1>Google Charts - Chart Demo</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h4>Line</h4>
        <div class="chart_wrap">
            <div id="line_chart_div" class="chart"></div>
        </div>
    </div>
    <div class="col-md-6">
        <h4>Bar</h4>
        <div class="chart_wrap">
            <div id="bar_chart_div" class="chart"></div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h4>Pie</h4>
        <div class="chart_wrap">
            <div id="pie_chart_div" class="chart"></div>
        </div>
    </div>
    <div class="col-md-6">
        <h4>Doughnut</h4>
        <div class="chart_wrap">
            <div id="doughnut_chart_div" class="chart"></div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h4>Combo</h4>
        <div class="chart_wrap">
            <div id="combo_chart_div" class="chart"></div>
        </div>
    </div>
    <div class="col-md-6">
        <h4>Area</h4>
        <div class="chart_wrap">
            <div id="area_chart_div" class="chart"></div>
        </div>
    </div>
</div>